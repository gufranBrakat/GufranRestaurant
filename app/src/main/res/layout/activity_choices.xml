<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.saad.gufran.gufranrestaurant.ChoicesActivity"
    android:background="@color/accent_material_light">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wgabat"
        android:id="@+id/btnwgabat"
        android:layout_above="@+id/btnDrinks"
        android:layout_alignStart="@+id/btnKabla"
        android:background="#62856d" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Drinks"
        android:id="@+id/btnDrinks"
        android:layout_above="@+id/btnAppetizer"
        android:layout_alignStart="@+id/btnwgabat"
        android:background="#9ed4c0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appetizer"
        android:id="@+id/btnAppetizer"
        android:layout_above="@+id/btnSalads"
        android:layout_alignEnd="@+id/btnDrinks"
        android:layout_alignStart="@+id/btnSalads"
        android:background="#ace5c9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Salads"
        android:id="@+id/btnSalads"
        android:layout_above="@+id/btnSweets"
        android:layout_centerHorizontal="true"
        android:background="#59d6af" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Sweets"
        android:id="@+id/btnSweets"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/btnSalads"
        android:background="#3cc070" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kabla"
        android:id="@+id/btnKabla"
        android:layout_below="@+id/btnSweets"
        android:layout_centerHorizontal="true"
        android:background="#2e8653" />
</RelativeLayout>
